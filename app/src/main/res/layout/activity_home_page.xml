<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/oxygenLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is your launch-zone. Attempt to explore the region to build your ship and escape this hostile planet. You're running short of time!"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/oxygenLevel"/>

    <Button
        android:id="@+id/goNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="North"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/goSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="South"
        android:layout_below="@+id/goNorth"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/goEast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="East"
        android:layout_below="@+id/goSouth"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/goWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="West"
        android:layout_below="@+id/goEast"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/launchOne"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/launchzone1" />

    <ImageView
        android:id="@+id/launchTwo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/launchzone2" />

    <ImageView
        android:id="@+id/launchThree"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/launchzone3" />

    <ImageView
        android:id="@+id/launchFour"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/launchzone4" />

    <ImageView
        android:id="@+id/launchEnd"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/launchzone_endgame" />

</RelativeLayout>